{
  "manifest_version": 3,
  "name": "Joule Quest for SAP Solutions",
  "version": "1.1.1",
  "description": "Master SAP Joule AI across SuccessFactors and S/4HANA. Gamified learning - earn points, complete challenges, become an expert!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.successfactors.com/*",
    "https://*.successfactors.eu/*",
    "https://*.hr.cloud.sap/*",
    "https://*.sapdas.cloud.sap/*",
    "https://*.s4hana.cloud.sap/*",
    "https://*.s4hana.ondemand.com/*",
    "https://*.nqo.cloud.sap/*",
    "https://*.hana.ondemand.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.successfactors.com/*",
        "https://*.successfactors.eu/*",
        "https://*.hr.cloud.sap/*",
        "https://*.s4hana.cloud.sap/*",
        "https://*.s4hana.ondemand.com/*",
        "https://*.nqo.cloud.sap/*",
        "https://*.hana.ondemand.com/*",
        "https://*.cloud.sap/*"
      ],
      "js": [
        "src/utils/logger.js",
        "src/i18n/i18n-manager.js",
        "src/utils/error-messages.js",
        "src/utils/shadow-dom-helper.js",
        "src/utils/solution-detector.js",
        "src/core/storage-manager.js",
        "src/core/error-handler.js",
        "src/ui/confetti.js",
        "src/ui/share-card-generator.js",
        "src/ui/overlay.js",
        "src/core/joule-handler.js",
        "src/core/quest-runner.js",
        "src/content.js"
      ],
      "css": [
        "src/ui/overlay.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://*.sapdas.cloud.sap/*"
      ],
      "js": [
        "src/joule-iframe-handler.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "src/ui/popup.html"
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/ui/confetti.js",
        "src/config/*.json",
        "src/i18n/*.json"
      ],
      "matches": [
        "https://*.successfactors.com/*",
        "https://*.successfactors.eu/*",
        "https://*.hr.cloud.sap/*",
        "https://*.s4hana.cloud.sap/*",
        "https://*.s4hana.ondemand.com/*",
        "https://*.nqo.cloud.sap/*",
        "https://*.hana.ondemand.com/*",
        "https://*.cloud.sap/*"
      ]
    }
  ]
}
